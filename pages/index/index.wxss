/**index.wxss**/
.header {
    position: relative;
    width: 100%;
}

.head-img {
    display: block;
    width: 100%;
}

.title {
    position: absolute;
    top: 20%;
    left: 0;
    right: 0;
    text-align: center;
    font-size: 16px;
    color: #ff0000;
}

.title.close {
    color: #169fe6;
}

.last-open-time {
    display: none;
    position: absolute;
    top: 40%;
    left: 0;
    right: 0;
    text-align: center;
    font-size: 16px;
    color: #ff0000;
}
.show{
    display: block;
}
.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 60px;
    height: 60px;
    margin: 20px;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.switch {
    font-size: 12px;
    color: #999;
    margin-top: 10px;
}

.remind-btn {
    display: block;
    padding: 0 1em;
    line-height: 30px;
    margin: 50px auto 0;
    color: #f15a21;
    font-size: 12px;
    background: #fff;
    border: 1px solid #f15a21;
    border-radius: 4px;
}

.remind-btn.close {
    color: #169fe6;
    border: 1px solid #169fe6;
}